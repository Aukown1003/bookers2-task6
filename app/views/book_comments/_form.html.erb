<!--local: falseで非同期、JS化-->
<%= form_with(model:[book, book_comment], local: true) do |f| %>
  <table class = "table table-borderless">
    <tr>
      <td>
        <%= f.text_area :comment, row:'5', class: "form-control w-100%" %><br>
        <%= f.submit "送信" %>
      </td>
    </tr>
  </table>
<% end %>